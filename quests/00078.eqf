state EasyQuestComplete
{
	desc	"Return to Slayer Master"

	action	AddNpcText(78, "Well done, I heard from the guards of your successful monster subjugation.");
	action	AddNpcText(78, "Here's the reward promised.");

	rule	TalkedToNpc(78) goto EasyReward
}

state EasyReward
{
	action  GiveExp(7500);
	action	GiveItem(1,1500);
	action  ShowHint("[Quest Complete] You gained 8000 EXP and 1500 gold");
	action	PlaySound(97);
	action  ResetDaily();
}

