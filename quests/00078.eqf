Main
{
questname "Slayer task(Daily)"
version 1
}

state Begin
{
	desc    "Talk to the Slayer Master"
		
	action  AddNpcText(78, "Hey there travller, I'm the famous monster slayer in Aeven city! Known far and wide across this world!");
	action  AddNpcText(78, "What do you mean you've never heard of me?! Anyway...I have a challenge for you, pick wisely..");
		
	action  AddNpcInput(78, 1, "Easy Challenge!");
	action  AddNpcInput(78, 2, "Medium Challenge!");
	action  AddNpcInput(78, 3, "Hardest Challenge!");

	rule    DoneDaily(1) goto Endwithoutreset
		
	rule    InputNpc(1) goto EasyRoll
	rule    InputNpc(2) goto MediumRoll
	rule    InputNpc(3) goto HardRoll
	
}

// Daily reset give up
state Failure
{
	desc	"Talk to the Slayer Master"

	action	AddNpcText(78, "Hmm, thought you were better than that. Come see me again tomorrow if you want to try again.");
	rule	TalkedToNpc(78) goto FailReset
}

state FailReset
{
	action	ShowHint("Slayer Master quest aborted");
	action  ResetDaily();
}

// Easy roll
state EasyRoll
{
	action  Roll(5)
		
	rule    Rolled(1) goto Sheep
	rule    Rolled(2) goto Goat
	rule    Rolled(3) goto Rat
	rule    Rolled(4) goto Snake
	rule	Rolled(5) goto Pig
}

state Sheep
{
	desc   "Kill 100 Sheep"

	action	AddNpcText(78, "Kill 100 sheep and return for your reward");
	action	AddNpcInput(78, 1, "Give Up");

	rule   	KilledNpcs(170,100) goto EasyQuestComplete
	rule	InputNpc(1) goto Failure

	}

